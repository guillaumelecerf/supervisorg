{% spaceless %}
{% if app.session.getFlashBag.peekAll|length %}
<div id="alerts-container">
    {% for type, alerts in app.session.getFlashBag.all %}
        {% set cssClass = type %}
        {% set icon = 'info' %}
        {% if type == 'success' %}
            {% set icon = 'check' %}
        {% endif %}
        {% if type == 'warning' %}
            {% set icon = 'warning' %}
        {% endif %}
        {% if type == 'error' %}
            {% set cssClass = 'danger' %}
            {% set icon = 'ban' %}
        {% endif %}

        {% for message in alerts %}
            <div class="alert alert-{{ cssClass }} alert-dismissible" >
                <button type="button" class="close" data-dismiss="alert" >&times;</button>
                {% if icon is not empty %}<i class="icon fa fa-{{ icon }}"></i>{% endif %}
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}
</div>
{% endif %}
{% endspaceless %}
